STEP 1
create database solusimitra2;

STEP 2
use solusimitra2;

STEP 3
create table solusimitradua_id (
	karyawan_id INT,
    karyawan_name varchar (100),
    karyawan_desc varchar (100)
);

--IN UNTUK ANGKA
--VARCHAR UNTUK HURUF
--APABILA INGIN MENAMBAHKAN FIELD PADA TABEL SIMAK PADA STEP 4 (MENGGUNAKAN ALTER TABLE)

STEP 4
alter table solusimitradua_id add email varchar (100);

STEP 5
insert into solusimitradua_id (karyawan_id, karyawan_name, karyawan_desc, email)
values (1, 'jason', 'IT', 'jason@solusimitra.id');

